{
  "discord": {
    "send_message": {
      "type": "function",
      "function": {
        "name": "send_message",
        "description": "Sends a message to a discord user",
        "parameters": {
          "type": "object",
          "properties": {
            "username": {
              "type": "string",
              "description": "The user's username"
            },
            "message": {
              "type": "string",
              "description": "The message to send to the user"
            }
          },
          "required": [
            "username", "message"
          ]
        }
      }
    },

    "read_messages": {
      "type": "function",
      "function": {
        "name": "read_messages",
        "description": "Fetch n messages from the dm history between the bot and the user",
        "parameters": {
          "type": "object",
          "properties": {
            "username": {
              "type": "string",
              "description": "The user's username"
            },
            "message_count": {
              "type": "integer",
              "description": "The number of messages to fetch, at least 5 is recommended"
            }
          },
          "required": [
            "username",
            "message_count"
          ]
        }
      }
    }
  }
}
